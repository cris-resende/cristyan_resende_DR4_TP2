@page
@model cristyan_resende_DR4_TP2.Pages.CountryManager.CreateCountryModel
@{
	ViewData["Title"] = "Cadastrar Múltiplos País";
}
<h2>@ViewData["Title"]</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    @for (int i = 0; i < Model.Countries.Count; i++)
    {
        <div class="form-group">
            <label asp-for="@Model.Countries[i].CountryName">Nome do País @i:</label>
            <input asp-for="@Model.Countries[i].CountryName" class="form-control" />
            <span asp-validation-for="@Model.Countries[i].CountryName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="@Model.Countries[i].CountryCode">Código ISO:</label>
            <input asp-for="@Model.Countries[i].CountryCode" class="form-control" />
            <span asp-validation-for="@Model.Countries[i].CountryCode" class="text-danger"></span>
        </div>

        <hr />
    }

    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <p>@Model.Message</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}